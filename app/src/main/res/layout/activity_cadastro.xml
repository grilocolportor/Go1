<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    android:id="@+id/widget0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/lblnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="50sp"
        android:gravity="left"
        android:layout_x="6dp"
        android:layout_y="8dp" />
    <EditText
        android:id="@+id/txtName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_x="10dp"
        android:layout_y="66dp" />
    <TextView
        android:id="@+id/lblCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_x="52dp"
        android:layout_y="120dp" />
    <TextView
        android:id="@+id/lblCountryCod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_x="15dp"
        android:layout_y="120dp" />
    <TextView
        android:id="@+id/lblPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N&#250;mero"
        android:textSize="50sp"
        android:gravity="left"
        android:layout_x="15dp"
        android:layout_y="158dp" />
    <EditText
        android:id="@+id/txtArea_cod"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:phoneNumber="true"
        android:layout_x="16dp"
        android:layout_y="223dp" />
    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:phoneNumber="true"
        android:layout_x="63dp"
        android:layout_y="223dp" />
</AbsoluteLayout>
